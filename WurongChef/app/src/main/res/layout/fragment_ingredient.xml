<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보유 재료"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ingredientList"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:layout_editor_absoluteX="0dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ingRow1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow1_1"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toStartOf="@+id/ingRow1_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow1_1_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow1_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow1_1_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow1_2"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow1_2_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow1_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow1_2_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow1_3"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintStart_toEndOf="@+id/ingRow1_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow1_3_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow1_3_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow1_3_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ingRow2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toBottomOf="@+id/ingRow1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow2_1"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toStartOf="@+id/ingRow2_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow2_1_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow2_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow2_1_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow2_2"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow2_2_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow2_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow2_2_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow2_3"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintStart_toEndOf="@+id/ingRow2_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow2_3_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow2_3_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow2_3_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ingRow3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toBottomOf="@+id/ingRow2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow3_1"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toStartOf="@+id/ingRow3_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow3_1_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow3_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow3_1_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow3_2"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow3_2_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow3_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow3_2_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ingRow3_3"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintStart_toEndOf="@+id/ingRow3_2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ingRow3_3_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/base_ingredient"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ingRow3_3_text"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="재료 이름"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/ingRow3_3_img" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    app:layout_constraintTop_toBottomOf="@+id/ingRow3" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginBottom="70dp">

        <ImageButton
            android:id="@+id/floatingButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mainfood" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

