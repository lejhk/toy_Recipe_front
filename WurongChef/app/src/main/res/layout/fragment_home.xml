                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/row2_2__row2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row2_2__row3_betweenBar"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row2_2__row3_content1"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="@+id/row2_2__row3_betweenBar"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/row2_2__row3_content1_image"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
